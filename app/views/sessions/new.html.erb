<div class="col-md-3 col-md-offset-4 login">
  <h3>Log In</h3>
  <br>
  <form action="<%= session_url %>" method="post">

    <input type="hidden"
           name="authenticity_token"
           value="<%=form_authenticity_token%>" >

     <div class="form-group">
       <input type="text"
       id="email"
       name="session[email]"
       class="form-control"
       data-toggle="floatLabel" data-value2="no-js"
       placeholder="Email">
       <label for="floatingLabels" style="color: #8ac">Email</label>
     </div>

     <div class="form-group">
       <input type="password"
       id="password"
       name="session[password]"
       class="form-control"
       data-toggle="floatLabel" data-value="no-js"
       placeholder="Password">
       <label for="floatingLabels" style="color: #8ac">Password</label>
     </div>

    <br>

    <button style="width: 100%;"
            name="submit"
            class="btn btn-primary">Login
    </button>

  </form>
</div>
